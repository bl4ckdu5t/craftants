<section class="search container">
	<% if @artisans.exists? %>
	<h3><%= @artisans.count %> <%= single_or_not('artisan', @artisans.count) %> matching your search</h3>
	<% @artisans.each do |artisan| %>
	<ul class="search-list">
		<li class="clearfix">
			<div class="col-md-1">
				<%= image_tag gravatar_src(artisan.email), alt: 'User image' %>
			</div>
			<div class="col-md-9">
				<h3><%= artisan.name %></h3>
				<span><%= "#{Category.find_by_index(artisan.specialization).name}".capitalize %></span>
			</div>
			<div class="col-md-2">
				<%= link_to artisan_profile_path(artisan.id), class: 'directional' do %>
				<i class="fa fa-paper-plane fa-2x"></i>
				View Profile
				<% end %>
			</div>
		</li>
	</ul>
	<% end %>
	<% else %>
		<h2>There were no results found</h2>
	<% end %>
</section>